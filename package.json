{
  "name": "nodejs-ts",
  "version": "1.0.0",
  "description": "A simple boilerplate for NodeJS using Typescript projects",
  "main": "index.js",
  "license": "MIT",
  "author": {
    "name": "Emerson Luiz",
    "email": "eluizbr@gmail.com",
    "url": "https://github.com/eluizbr"
  },
  "engines": {
    "node": "^8.9.1",
    "npm": "5.5.1"
  },
  "scripts": {
    "heroku-prebuild": "npm install --only=dev && tsc -p . && npm run makeDevDoc",
    "dev": "export NODE_ENV='devel' && nodemon --exec ts-node src/index.ts",
    "prod": "export NODE_ENV='production' && nodemon --exec ts-node src/index.ts",
    "build": "tsc -p . && apidoc -i src -o build/public/doc",
    "buildTest": "tsc -p .",
    "makeDoc": "node_modules/.bin/apidoc -i src -o src/public/doc",
    "copyApp": "cd src/public && cp -rfv app ../../build/public",
    "copyAppJS": "node scripts-shell/copy-app.js",
    "makeDevDoc": "node_modules/.bin/apidoc -i src -o build/public/doc && npm run copyAppJS",
    "start": "node build/index.js",
    "test": "node_modules/.bin/mocha --opts src/test/mocha.opts",
    "test:watch": "export PORT='3001' NODE_ENV='devel' && node_modules/.bin/mocha --opts src/test/mocha.opts --watch"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.0.5",
    "@types/compression": "^0.0.35",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.0.39",
    "@types/express-jwt": "^0.0.38",
    "@types/express-session": "^1.15.6",
    "@types/helmet": "^0.0.37",
    "@types/mocha": "^2.2.44",
    "@types/mongodb": "^2.2.15",
    "@types/mongoose": "^4.7.27",
    "@types/morgan": "^1.7.35",
    "@types/node": "^8.0.53",
    "@types/passport": "^0.4.1",
    "@types/supertest": "^2.0.4",
    "apidoc": "^0.17.6",
    "chai": "^4.1.2",
    "eslint": "^4.11.0",
    "eslint-plugin-prettier": "^2.3.1",
    "mocha": "^4.0.1",
    "prettier": "^1.8.2",
    "shelljs": "^0.7.8",
    "supertest": "^3.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-jwt": "^5.3.0",
    "express-session": "^1.15.6",
    "helmet": "^3.9.0",
    "mongoose": "^4.13.4",
    "mongoose-paginate": "^5.0.3",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0"
  }
}
